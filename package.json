{
    "$schema": "./node_modules/ng-packagr/package.schema.json",
    "name": "ngx-openlayers",
    "version": "0.8.19",
    "scripts": {
        "lint": "tslint src/**/*.ts",
        "test": "echo \"No tests specified\" && exit 0",
        "build": "ng-packagr -p package.json",
        "release": "npm version -m \"[version] %s\" patch"
    },
    "ngPackage": {
        "lib": {
            "entryFile": "src/public_api.ts"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/quentin-ol/ngx-openlayers"
    },
    "author": {
        "name": "Quentin Lampin",
        "email": "quentin.lampin@orange.com"
    },
    "keywords": [
        "angular",
        "angular2",
        "angular4",
        "openlayers",
        "openlayers3",
        "openlayers4",
        "ngx-openlayers"
    ],
    "license": "MPL-2.0",
    "bugs": {
        "url": "https://github.com/quentin-ol/ngx-openlayers/issues"
    },
    "main": "./dist/index.js",
    "typings": "./dist/index.d.ts",
    "peerDependencies": {
        "@types/openlayers": "4.3.x || 4.4.x",
        "openlayers": "4.3.x || 4.4.x"
    },
    "devDependencies": {
        "@angular/common": "^5.2.0",
        "@angular/compiler": "^5.2.0",
        "@angular/compiler-cli": "^5.2.0",
        "@angular/core": "^5.2.0",
        "@types/jasmine": "^2.5.38",
        "openlayers": "4.3.x || 4.4.x",
        "@types/openlayers": "4.3.x || 4.4.x",
        "@types/selenium-webdriver": "^3.0.4",
        "@webfactory/releaser": "^2.4.0",
        "codelyzer": "^4.0.0",
        "ng-packagr": "^2.4.2",
        "rxjs": "5.5.0",
        "tsickle": "^0.27.5",
        "tslib": "^1.9.0",
        "tslint": "~5.3.2",
        "typescript": "~2.5.0",
        "zone.js": "0.8.11"
    },
    "engines": {
        "node": ">=0.8.0"
    }
}
